/**
 * Implements hook_menu().
 */
function pw_profiles_menu() {
  $items['profiles/%taxonomy_term/%'] = [
    'title callback' => 'pw_profiles_page_title',
    'title arguments' => [1, 2],
    'page callback' => 'pw_profiles_page',
    'page arguments' => [1, 2],
